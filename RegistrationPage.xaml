<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CyclingRoutePlannerApp.RegistrationPage"
             Title="Register"
             Shell.FlyoutBehavior="Disabled"
             >

<VerticalStackLayout>

        <Label Text="Account details" FontSize="18"></Label>
        <Label Text="Email address" Margin="0,10"></Label>

        <Entry BackgroundColor="DarkGray" Placeholder="e.g. name@example.com" Margin="0,10"/>

        <Label Text="Set password" Margin="0,10"></Label>
        <Entry BackgroundColor="DarkGray"  IsPassword="True" Margin="0,10"/>
        <Button 
            VerticalOptions="Center"
            HorizontalOptions="Fill"
            Text="Create account"
            Clicked ="Button_Clicked"
            FontSize="18"/>

        <Label Text="Already have an account? Sign in here" VerticalOptions="Center" HorizontalOptions="Start" TextColor="MediumPurple" FontSize="16" Margin="10,10">

        <Label.GestureRecognizers>
            <TapGestureRecognizer Tapped="Label_Clicked"/>
        </Label.GestureRecognizers>
    </Label>

</VerticalStackLayout>

</ContentPage>
