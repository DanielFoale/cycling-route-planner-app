<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CyclingRoutePlannerApp.MainPage"
             Title="New Route">


    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Logout" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,30">


            <Entry Placeholder="Enter start point here" />

            <Entry Placeholder="Enter end point here" />

            <Button
                x:Name="GoBtn"
                Text="Generate Route"
                Clicked="OnBtnClicked"
                HorizontalOptions="Center" />

            <Label
                Text="Map"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="52"
                HorizontalOptions="Center"/>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
