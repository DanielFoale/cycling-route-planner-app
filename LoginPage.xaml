<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CyclingRoutePlannerApp.LoginPage"
             Title="Sign in"
             Shell.FlyoutBehavior="Disabled">

    <VerticalStackLayout>
        <Label Text="New to App? Register here" VerticalOptions="Center" HorizontalOptions="Start" TextColor="MediumPurple" FontSize="16" Margin="0,10">

            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecongnizer_Tapped"/>
            </Label.GestureRecognizers>
        </Label>

        <Entry x:Name="usernameEntry" BackgroundColor="DarkGray" Placeholder="Username" Margin="0,10"/>


        <Entry x:Name="passwordEntry" BackgroundColor="DarkGray" Placeholder="Password" IsPassword="True" Margin="0,10"/>

        <Label x:Name="error" TextColor="Red"/>
        <Button 
            VerticalOptions="Center"
            HorizontalOptions="Fill"
            Text="Sign in"
             FontSize="18"
            
            Clicked ="Button_Clicked"/>


    </VerticalStackLayout>
</ContentPage>