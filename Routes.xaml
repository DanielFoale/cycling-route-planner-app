<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CyclingRoutePlannerApp.RoutesPage"
             Title="Saved Routes">
    <VerticalStackLayout Padding="30,0">
        <Label 
            x:Name="RouteName1"
            Text="Home to Work"
            VerticalOptions="Center" 
            HorizontalOptions="Start"
            Margin="0,10"
            IsVisible="False"/>
        <Grid>
            <Map x:Name="map1" MinimumHeightRequest="150" IsScrollEnabled="False" IsZoomEnabled="False" IsVisible="False"/>
        </Grid>
        
        <Label 
            x:Name="RouteName2"
            Text="Work to Home"
            VerticalOptions="Center" 
            HorizontalOptions="Start"
            Margin="0,10"
            IsVisible="False"/>
        <Grid>
            <Map x:Name="map2" MinimumHeightRequest="150" IsScrollEnabled="False" IsZoomEnabled="False" IsVisible="False"/>
        </Grid>
        
        <Label 
            x:Name ="RouteName3"
            Text="Route Name1"
            VerticalOptions="Center" 
            HorizontalOptions="Start"
            Margin="0,10"
            IsVisible="False"/>
        <Grid>
            <Map x:Name="map3" MinimumHeightRequest="150" IsScrollEnabled="False" IsZoomEnabled="False" IsVisible="False"/>
        </Grid>
        
    </VerticalStackLayout>
</ContentPage>